{
    "name": "joshespi/php-boilerplate",
    "description": "A simple PHP boilerplate project",
    "type": "project",
    "require": {
        "php": "^8.4",
        "vlucas/phpdotenv": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\Models\\": "models/",
            "App\\Controllers\\": "controllers/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}